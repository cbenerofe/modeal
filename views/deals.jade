doctype html
html(ng-app="dealsApp")
  head
    title modeals
    include includes/scripts.jade
    
    script(src="/js/deals.js")

  body(ng-controller="dealsController")
    include includes/topnav.jade
  
    .container
      div.card-deck(style="padding-top:25px;")
        div.card(ng-repeat="deal in deals" style="max-width: 250px;")
          div(style="width:250px;height:150px;")
            img.card-img-top(ng-src="/images/{{deal.id}}.jpg" style="max-width:250px;object-fit:cover;" alt="Card image cap" )
          //{{deal}}
          div.card-block
            h4.card-title {{deal.name}}
            p.card-text {{deal.seller}}
            a.btn.btn-primary(ng-href="/deals/{{deal.id}}") Go